@model BgAuto.Models.OrderCreateViewModel
<form asp-controller="Order" asp-action="Create" method="post">
    <div class="d-flex align-items-center">
        <label class="font-weight-bold text-left mr-1" asp-for="Quantity">Count:</label>
        <div class="mr-1">
            <input class="form-control" min="1" asp-for="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Order</button>
    </div>
    <input type="hidden" asp-for="CarId" value="@Model.CarId">
</form>